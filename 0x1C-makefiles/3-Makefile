CC = gcc
SRC = main.c school.c
OBJ = $(wildcard *.o)
NAME = school
all : $(NAME)
$(NAME) : $(OBJ)
	$(CC) -o $(NAME) $(OBJ)
%.o: %.c
	$(CC) -c $< -o $@
clean :
	rm -f $(NAME) $(wildcard *.swp) $(wildcard *~)
oclean :
	rm -f $(OBJ)
fclean :
	rm -f $(NAME) $(OBJ) $(wildcard *.swp) $(wildcard *~)
re: fclean all
