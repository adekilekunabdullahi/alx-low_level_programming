CC = gcc
SRC = main.c school.c
OBJ = $(wildcard *.o)
NAME = school
RM = rm -f
all : $(NAME)
$(NAME) : $(OBJ)
	$(CC) -o $(NAME) $(OBJ)
%.o: %.c
	$(CC) -c $< -o $@
clean :
	RM $(NAME) $(wildcard *.swp) $(wildcard *~)
oclean :
	RM $(OBJ)
fclean :
	RM $(NAME) $(OBJ) $(wildcard *.swp) $(wildcard *~)
re: fclean all
