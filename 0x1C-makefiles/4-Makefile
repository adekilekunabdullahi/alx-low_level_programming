CC = gcc
SRC := main.c school.c
NAME = school
OBJ = $(SRC:.c=.o)
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(SRC) -o $(NAME)
main.o: main.c
	$(CC) $(CFLAGS) -c -o main.o main.c
school.o: school.c
	$(CC) $(CFLAGS) -c -o school.o school.c
clean: 
	$(RM) $(NAME)
	$(RM) *~
	$(RM) .*~
	$(RM) *.swp
	$(RM) .*.swp
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: fclean all
